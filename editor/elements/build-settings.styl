:host {
    color: #ddd
    background: rgb(48,48,48)
    font-family: 'Helvetica Neue',Helvetica,Arial,sans-serif
}

.title {
    width: 100%
    float: left
    background-color: rgb(36,36,36)
    font-size: 18px
    line-height: 40px
    padding-left: 15px
    border-bottom: 1px solid rgb(66,66,66)

    h2 {
        margin-top: 10px
        margin-bottom: 10px
        float:left
    }

    .tip {
        color: red
        font-size: 12px
        padding-left: 100px
        display: none
        line-height: 60px
        float:left
    }
}

.section{
    width: 100%
    height: auto
    float: left
}

.path {
    font-size: 10px
}

.prop {
    height: 24px
    margin-left: 15px
    margin-top: 10px
    margin-right: 15px
    padding-bottom: 10px
    border-bottom: 1px solid rgb(40,40,40)
    fire-ui-label {
        font-size: 13px
    }
}

.item-box {
    height: 100px
    max-height: 100px
    overflow: hidden
    margin-top: 5px
}

.border {
    border: 1px solid rgb(153, 153, 153)
    position: absolute
    max-height: 100px
    left: 191px
    width: 296px

}

.items {
    min-height: 80px
    overflow-x: hidden
    overflow-y: auto

    fire-ui-checkbox {
        margin: 3px
    }
}

.box-border {
    min-height: 80px
    border: 1px solid rgb(153, 153, 153)
}

.link {
    font-size: 12px
    -webkit-user-select: initial
    text-decoration: underline
    cursor: pointer

    &:hover {
        color: #0c90e6
    }
}

.btn-group {
    width: 100%
    height: auto
    float: left
    margin-top: 12px
    margin-bottom: 5px

    button {
        float: right
        width: 80px
        height: 30px
        margin-right: 15px
        border: 1px solid #252525
        border-radius: 2px
        padding: 4px 8px
        cursor: pointer
        color: #bdbdbd

        li {
            font-size: 20px
            cursor: pointer
            color: white
        }

        &:focus {
            outline: none
        }

        &.green {
            background-color: #090

            &:hover {
                background-color: #090 + 10%
            }

            &:active {
                background-color: #090 - 10%
            }
        }

        &.red {
            background-color: #900

            &:hover {
                background-color: #900 + 10%
            }

            &:active {
                background-color: #900 - 10%
            }
        }
    }
    .hide {
        display: none
    }
}

fire-ui-label {
    text-align: right
    margin-right: 20px
}
